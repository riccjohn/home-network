# Domain Configuration
DOMAIN=your_real_domain.com
TRAEFIK_EMAIL=your_email@example.com

# Base paths for service configurations
BASE_PATH=/path/to/your/home-server-data

# Service-specific paths (automatically derived from BASE_PATH)
HOMEPAGE_CONFIG_PATH=${BASE_PATH}/homepage/config
HOMEPAGE_DATA_PATH=${BASE_PATH}/homepage/data
HOMEASSISTANT_CONFIG_PATH=${BASE_PATH}/homeassistant
SYNCTHING_CONFIG_PATH=${BASE_PATH}/syncthing
JELLYFIN_CONFIG_PATH=${BASE_PATH}/jellyfin
CALIBRE_CONFIG_PATH=${BASE_PATH}/calibre
PIHOLE_CONFIG_PATH=${BASE_PATH}/pihole

# Traefik Dashboard Credentials
TRAEFIK_DASHBOARD_USER=admin
TRAEFIK_DASHBOARD_PASSWORD=change_this_password

# Timezone (default: UTC)
TZ=UTC

# Network Configuration
DOCKER_NETWORK=home-server-network

# Pi-hole Configuration
PIHOLE_PASSWORD=change_this_password
PIHOLE_ADMIN_PORT=8080
PIHOLE_DNS_PORT=53

# Home Assistant Configuration
HOMEASSISTANT_PORT=8123

# Syncthing Configuration
SYNCTHING_PORT=8384

# Jellyfin Configuration
JELLYFIN_PORT=8096

# Calibre Configuration
CALIBRE_PORT=8083

# Homepage Configuration
HOMEPAGE_PORT=3000

# Docker Compose Project Name
COMPOSE_PROJECT_NAME=home-server 