# Domain Configuration
DOMAIN=your_real_domain.com
TRAEFIK_EMAIL=your_email@example.com

# Base paths for service configurations and data
BASE_PATH=/path/to/your/home-server-data

# Traefik Configuration
TRAEFIK_DASHBOARD_USER=admin
TRAEFIK_DASHBOARD_PASSWORD=change_this_secure_password

# Home Assistant Configuration
HOMEASSISTANT_TIMEZONE=America/New_York
HOMEASSISTANT_LATITUDE=40.7128
HOMEASSISTANT_LONGITUDE=-74.0060

# Pi-hole Configuration
PIHOLE_PASSWORD=change_this_secure_password
PIHOLE_TIMEZONE=America/New_York
PIHOLE_DNS1=1.1.1.1
PIHOLE_DNS2=1.0.0.1

# Jellyfin Configuration
JELLYFIN_PUID=1000
JELLYFIN_PGID=1000
JELLYFIN_TIMEZONE=America/New_York

# Calibre Configuration
CALIBRE_PUID=1000
CALIBRE_PGID=1000
CALIBRE_TIMEZONE=America/New_York

# Syncthing Configuration
SYNCTHING_PUID=1000
SYNCTHING_PGID=1000

# Docker Network Configuration
DOCKER_NETWORK=home-server-network

# Volume Paths (automatically generated, do not modify)
TRAEFIK_CONFIG_PATH=${BASE_PATH}/traefik
HOMEPAGE_CONFIG_PATH=${BASE_PATH}/homepage
HOMEPAGE_DATA_PATH=${BASE_PATH}/homepage/data
HOMEASSISTANT_CONFIG_PATH=${BASE_PATH}/homeassistant
SYNCTHING_CONFIG_PATH=${BASE_PATH}/syncthing
JELLYFIN_CONFIG_PATH=${BASE_PATH}/jellyfin
JELLYFIN_DATA_PATH=${BASE_PATH}/jellyfin/data
CALIBRE_CONFIG_PATH=${BASE_PATH}/calibre
CALIBRE_DATA_PATH=${BASE_PATH}/calibre/data
PIHOLE_CONFIG_PATH=${BASE_PATH}/pihole
PIHOLE_DNSMASQ_PATH=${BASE_PATH}/pihole/dnsmasq 